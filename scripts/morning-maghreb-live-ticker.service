[Service]
Type=simple
User=karimamor
WorkingDirectory=/Users/karimamor/Library/Mobile Documents/com~apple~CloudDocs/Data/ClonedGit/Casablanca-Insights
ExecStart=/usr/bin/python3 /Users/karimamor/Library/Mobile Documents/com~apple~CloudDocs/Data/ClonedGit/Casablanca-Insights/scripts/live_ticker_orchestrator.py
